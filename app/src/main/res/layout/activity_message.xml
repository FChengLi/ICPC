<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="消息"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/return1"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/return1"
        android:onClick="onReturnClicked" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/message"
        android:onClick="showReplies" />

    <ImageView
        android:id="@+id/likes"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/likes"
        android:onClick="showLikes" />

    <ImageView
        android:id="@+id/toast"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/toast"
        android:onClick="showNotifications" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="回复我的" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/likes"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:text="收到的赞" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toast"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="系统通知" />

    <TextView
        android:id="@+id/msgtitle"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="消息列表" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msglist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/msgtitle"/>

</RelativeLayout>
